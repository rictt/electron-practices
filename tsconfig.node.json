{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "src/main/ipc/**/*",
    "src/main/ipc/*",
  ],
  "compilerOptions": {
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "types": ["electron-vite/node", "./src/types/index"],
  }
}
